#include <SFML/Graphics.hpp>
#include <SFML/Audio.hpp>
#include <SFML/Graphics.hpp>
#include <iomanip>
#include <iostream>
#include <fstream>
using namespace std;

int main()
{

    sf::RenderWindow window(sf::VideoMode(2000, 1000), "SFML works!");
    sf::CircleShape shape(100.f);
    shape.setFillColor(sf::Color::Red);
    sf::Texture texture;
    if (!texture.loadFromFile("62385935049__70550DCE-858C-4B6F-9C8B-91CB589CEB26.jpeg"))
        return EXIT_FAILURE;
    sf::Sprite sprite(texture);
    sf::Font font;
    font.loadFromFile("28744608880.ttf");
    sf::Text text("Welcome to Basic Baby Names", font);
    text.setColor(sf::Color::Blue);
    text.setCharacterSize(80);
    const int SCRWIDTH = 2000;
    const int SCRHEIGHT = 200;
    sf::FloatRect textRect = text.getLocalBounds();
    text.setOrigin(textRect.width/2,textRect.height/2);
    text.setPosition(sf::Vector2f(SCRWIDTH/2.0f,SCRHEIGHT/2.0f));




    while (window.isOpen())
    {
        sf::Event event;
        while (window.pollEvent(event))
        {
            if (event.type == sf::Event::Closed)
                window.close();
        }

        window.clear();

        window.draw(sprite);
        window.draw(shape);
        window.draw(text);
        window.display();
    }

    return 0;
}


